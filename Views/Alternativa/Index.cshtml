@model IEnumerable<PowerUp.Models.AlternativaModel>

<div class="py-5">
    <div class="container">
        <div class="btn btn-success" asp-action="Cadastrar" asp-controller="Alternativa">Cadastrar nova Alternativa</div>
    </div>
    
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-0">
        @if (Model != null)
        {
            @if (Model.Count() > 0)
            {
                @foreach (var alternativas in Model)
                {
                    <div class="card-body">
                        <h5>@alternativas.Id</h5>
                        <h5>@alternativas.Pergunta</h5>
                        <h5>@alternativas.Descricao</h5>
                        <h5>@alternativas.ECorreta</h5>
                    </div>
                    
                    <div class="card-body">
                        <a class="btn btn-warning w-100" asp-action="Editar" asp-controller="Alternativa" asp-route-id="@alternativas.Id">Editar</a>
                        <a class="btn btn-warning w-100" asp-action="Remover" asp-controller="Alternativa" asp-route-id="@alternativas.Id">Remover</a>
                    </div>
                }
            }
        }
    </div>
</div>